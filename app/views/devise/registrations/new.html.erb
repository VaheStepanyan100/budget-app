<div class="navigation py-6 px-3 blue-nav-white-text">
  <ul class="flex justify-between items-center">
    <li class="w-10">
      <%= link_to image_tag('backarrow.png', alt: 'Back'), root_path, class: 'nav-link' %>
    </li>
    <li style="margin-left: 40px;">
      <span>REGISTER</span>
      <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "invisible" %>
    </li>
    <li>
      <button type="submit" class="nav-link" id="nextButton">NEXT</button>
    </li>
  </ul>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'mt-10 flex flex-col', id: 'signupForm' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field border-t-2 ">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'w-full  border-none', placeholder: 'Name' %>
  </div>

  <div class="field border-t-2">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full border-none', placeholder: 'Email' %>
  </div>

  <div class="field border-t-2">
    <%= f.password_field :password, autocomplete: "new-password", class: 'w-full  border-none', placeholder: 'Password (6 characters minimum)' %>
  </div>

  <div class="field border-y-2">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full border-none', placeholder: 'Password confirmation' %>
  </div>
<% end %>

<script>
  document.getElementById('nextButton').addEventListener('click', function() {
    document.getElementById('signupForm').submit();
  });
</script>